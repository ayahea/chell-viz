{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "../docs/api",
    "sourceMap": false
  },
  "include": ["../src/**/*", "../types", "types"],
  "exclude": ["../node_modules", "../**/__tests__/**", "../**/__mocks__/**", "../configs"],
  "typedocOptions": {
    "mode": "modules",
    "out": "../docs/api",
    "exclude": "test",
    "excludePrivate": true,
    "excludeNotExported": true
  }
}
