{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "paths": {
      "plotly.js/dist/plotly": ["node_modules/@types/plotly.js"],
      "react": ["node_modules/@types/react"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "types", "configs/**/*"],
  "typeAcquisition": {
    "enable": true
  }
}
