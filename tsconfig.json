{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es5", "es6", "es7", "es2017"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "paths": {
      "plotly.js/dist/plotly": ["node_modules/@types/plotly.js"],
      "react": ["node_modules/@types/react"],
      "semantic-ui-react": ["node_modules/semantic-ui-react/index.d.ts"]
    },
    "rootDirs": ["src, configs, stories"],
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "types", "configs/**/*", "__mocks__/**/*", "./chell-viz.ts"],
  "typeAcquisition": {
    "enable": false
  }
}
