{
  "name": "chell-viz",
  "version": "0.0.1",
  "author": "Biostatistics and Computational Biology at Dana-Farber <bcb@jimmy.harvard.edu>",
  "license": "MIT",
  "engines": {
    "node": "^9.6.0",
    "npm": "^5.6.0",
    "yarn": "^1.5.0"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.{ts,tsx}"],
    "coverageDirectory": "dist/jest/coverage",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "moduleNameMapper": {
      "tsnejs": "tsnejs/tsne",
      "\\.(css|less)$": "<rootDir>/src/__mocks__/styleMock.ts"
    },
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "testEnvironment": "enzyme",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testResultsProcessor": "jest-junit",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  },
  "jest-junit": {
    "ancestorSeparator": " â€º ",
    "classNameTemplate": "{classname}",
    "output": "dist/jest/test-results/junit.xml",
    "suiteName": "Chell-Viz Jest Tests",
    "titleTemplate": "{title}"
  },
  "lint-staged": {
    "*.{json,md,ts,tsx}": ["prettier --write", "git add"],
    "*.md": ["markdownlint -c ./markdownlint.json", "git add"],
    "*.{ts,tsx}": ["tslint", "git add"]
  },
  "scripts": {
    "build": "webpack --mode development",
    "lint": "npm-run-all lint:*",
    "lint:src": "tslint --project ./",
    "lint:markdown": "markdownlint ./ -c ./markdownlint.json -i node_modules",
    "precommit": "lint-staged && yarn test:staged",
    "start": "webpack-dev-server --open --mode development --config webpack.config.ts",
    "start:hot": "webpack-dev-server --hot-only --open --mode development --config webpack.config.ts",
    "start:prod": "webpack-dev-server --open --mode production --config webpack.config.ts",
    "pretest": "mkdir -p dist/jest/test-results",
    "test": "cross-env TEST_REPORT_PATH=dist/jest/test-results jest",
    "test:cover": "yarn test -- --collectCoverage true",
    "test:staged": "jest --onlyChanged"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "semantic-ui-react": "^0.79.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.4.0",
    "@types/d3": "^5.0.0",
    "@types/enzyme": "^3.1.9",
    "@types/html-webpack-plugin": "^2.30.2",
    "@types/jest": "^22.2.0",
    "@types/jquery": "^3.3.0",
    "@types/node": "^9.4.6",
    "@types/rc-slider": "^8.2.3",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/react-test-renderer": "^16.0.1",
    "@types/recharts": "^1.0.18",
    "@types/signals": "^1.0.1",
    "@types/source-map": "0.5.2",
    "@types/three": "^0.89.11",
    "@types/webpack": "^3.8.8",
    "@types/webpack-env": "^1.13.5",
    "copy-webpack-plugin": "^4.5.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.11",
    "d3": "^5.0.0-rc.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^3.0.4",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-enzyme": "^5.0.3",
    "jest-junit": "^3.6.0",
    "jquery": "^3.3.1",
    "lint-staged": "^7.0.0",
    "markdownlint-cli": "^0.7.1",
    "ngl": "^2.0.0-dev.28",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "rc-slider": "^8.6.1",
    "react-test-renderer": "^16.2.0",
    "recharts": "^1.0.0-beta.10",
    "style-loader": "^0.20.3",
    "ts-jest": "^22.4.1",
    "ts-loader": "^4.0.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-react": "^3.5.1",
    "tsnejs": "https://github.com/karpathy/tsnejs",
    "typedoc": "^0.11.1",
    "typedoc-webpack-plugin": "^1.1.4",
    "typescript": "^2.7.2",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9",
    "webpack-dev-server": "^3.1.0"
  }
}
